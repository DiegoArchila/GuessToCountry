<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/23.0.1"
      fx:controller="com.diarchila.guessthecountry.controllers.GameController"
      spacing="20" alignment="CENTER" stylesheets="@../styles/guessTheCountry.css">

    <padding>
        <Insets top="30" right="20" bottom="30" left="20"/>
    </padding>

    <HBox spacing="40" alignment="CENTER">
        <Label fx:id="lblMaxQuestions" text="Pregunta 1/10" styleClass="info-label"/>
        <Label fx:id="lblScore" text="Puntuación: 0" styleClass="info-label"/>
        <Label fx:id="lblTimer" text="Tiempo: 30s" styleClass="info-label"/>
    </HBox>

    <Label fx:id="lblQuestion" text="¿A qué país pertenece esta bandera?" styleClass="question-label"/>

    <ImageView fx:id="flagImage" fitHeight="200" fitWidth="300" preserveRatio="true"/>

    <VBox alignment="CENTER" spacing="10">
        <Button fx:id="btnOption1" text="Opción 1" styleClass="btn-option"/>
        <Button fx:id="btnOption2" text="Opción 2" styleClass="btn-option"/>
        <Button fx:id="btnOption3" text="Opción 3" styleClass="btn-option"/>
        <Button fx:id="btnOption4" text="Opción 4" styleClass="btn-option"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnBackToMenuGame" text="Salir" styleClass="reb-btn"/>
    </HBox>

</VBox>
