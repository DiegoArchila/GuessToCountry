<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0"
      xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/23.0.1"
      fx:controller="com.diarchila.guessthecountry.controllers.InstructionsController">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
    </padding>

    <TextArea fx:id="txtInstrucciones" editable="false" wrapText="true" prefWidth="400" prefHeight="200" />

    <Button fx:id="backButton" text="Volver" styleClass="reb-btn" />
</VBox>
