<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           xmlns="http://javafx.com/javafx/23.0.1"
           fx:controller="com.diarchila.guessthecountry.controllers.InstruccionesController"
           stylesheets="@../styles/guessTheCountry.css">

    <VBox alignment="CENTER" spacing="20" prefWidth="600" prefHeight="600">

        <Label fx:id="lblTitle" text="Instrucciones del Juego" styleClass="title-instruction" />

        <TextArea fx:id="txtInstructions"
                  editable="false"
                  wrapText="true"
                  prefHeight="400"
                  prefWidth="550"
                  styleClass="instructions-textarea" />


        <Button fx:id="btnVolver"
                text="Volver"
                styleClass="btn-backer"
                onAction="#volverAtras" />

    </VBox>

</StackPane>
